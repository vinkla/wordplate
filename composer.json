{
	"name": "wordpress-boilerplate",
	"description": "Boilerplate that scaffolds a basic WordPress project using Composer.",
	"repositories": [
		{
			"type": "composer",
			"url": "http://wpackagist.org"
		},
		{
			"type": "package",
			"package": {
				"name": "wordpress/wordpress",
				"type": "webroot",
				"version": "4.1.1",
				"dist": {
					"type": "zip",
					"url": "https://wordpress.org/wordpress-4.1.1.zip"
				},
				"require": {
					"fancyguy/webroot-installer": "1.1.0"
				}
			}
		},
        {
          "type": "package",
          "package": {
            "name": "advanced-custom-fields/advanced-custom-fields-pro",
            "version": "5.2",
            "type": "wordpress-plugin",
            "dist": {
              "type": "zip",
              "url": "http://connect.advancedcustomfields.com/index.php?p=pro&a=download&k=b3JkZXJfaWQ9MzQyMTl8dHlwZT1kZXZlbG9wZXJ8ZGF0ZT0yMDE0LTA3LTEwIDA2OjEwOjM3"
            }
          }
        }
	],
	"require": {
		"wordpress/wordpress": "~4.0",
		"vlucas/phpdotenv": "~1.0",
		"jjgrainger/wp-custom-post-type-class": "~1.0",
		"wpackagist-plugin/wordpress-importer": "~0.6",
        "advanced-custom-fields/advanced-custom-fields-pro": "5.2"
	},
	"config": {
		"preferred-install": "dist"
	},
	"extra": {
		"installer-paths": {
			"wp-content/plugins/{$name}": ["type:wordpress-plugin"]
		},
		"webroot-dir": "wordpress",
		"webroot-package": "wordpress/wordpress"
	}
}
