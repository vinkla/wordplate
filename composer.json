{
	"name": "wordpress-boilerplate",
	"description": "Boilerplate that scaffolds a basic wordpress project using composer.",
	"repositories": [
		{
			"type": "composer",
			"url": "http://wpackagist.org"
		},
		{
			"type": "package",
			"package": {
				"name": "wordpress/wordpress",
				"type": "webroot",
				"version": "3.9.2",
				"dist": {
					"type": "zip",
					"url": "https://github.com/WordPress/WordPress/archive/3.9.2.zip"
				},
				"require": {
					"fancyguy/webroot-installer": "1.1.0"
				}
			}
		}
	],
	"require": {
		"wordpress/wordpress": "3.9.2",
		"jjgrainger/wp-custom-post-type-class": "v1.2.3",
		"wpackagist/advanced-custom-fields": "4.3.8",
		"wpackagist/wordpress-importer": "0.6.1"
	},
	"config": {
		"preferred-install": "dist"
	},
	"extra": {
		"installer-paths": {
			"wp-content/plugins/{$name}": ["type:wordpress-plugin"]
		},
		"webroot-dir": "wordpress",
		"webroot-package": "wordpress/wordpress"
	}
}
